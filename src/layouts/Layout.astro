---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "bootstrap/dist/css/bootstrap.css";

import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
 -->
    <!-- SEO -->
    <meta name="google-site-verification" content="KK3nzbw3LLJrOr_DtYT-wwZpBBBTyQLOq2byo5tYHxw" />
    <meta
      name="description"
      content="Descubre en Atom Store las camisetas más trendy y exclusivas para jóvenes en Cali, Colombia. Explora nuestra colección de diseños únicos y personalizados que destacarán tu estilo. ¡Viste con actitud y originalidad! Envíos rápidos y seguros a tu puerta. ¡Haz una declaración de moda con Atom Store hoy!"
    />
    <meta
      name="keywords"
      content="ATOM STORE, TIENDA ONLINE, CAMISETAS PERSONALIZADAS, DISEÑOS, ATOM CO, Camisetas personalizadas, Moda joven, Diseños exclusivos, Atom Store, Ropa juvenil, Comprar camisetas en línea, Envíos rápidos, Estilo único"
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="atomstore.com" />
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Store",
        "name": "Atom Store",
        "description": "Tienda online de camisetas personalizadas en Cali, Colombia.",
        "url": "atomstore.com",
        "image": "https://atomstore.co/logo-atom.svg",
        "priceRange": "20.000 - 100.000 COP",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Carrera 48 # 4 - 163",
          "addressLocality": "Cali",
          "addressRegion": "Valle del Cauca",
          "postalCode": "760034",
          "addressCountry": "Colombia"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+57-312-640-1748",
          "contactType": "Servicio al cliente"
        },
        "sameAs": [
          "https://www.instagram.com/atomstore_co?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="
        ],
        "breadcrumb": {
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "item": {
                "@id": "https://atomstore.co/",
                "name": "Inicio"
              }
            },
            {
              "@type": "ListItem",
              "position": 2,
              "item": {
                "@id": "https://atomstore.co/about/",
                "name": "Nosotros"
              }
            },
            {
              "@type": "ListItem",
              "position": 3,
              "item": {
                "@id": "https://atomstore.co/catalogo/",
                "name": "Catálogo"
              }
            }
          ]
        }
      }
    </script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-081TYNY0K0"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-081TYNY0K0");
    </script>

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <slot />

    <Footer />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script> -->
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: black;
  }
</style>
