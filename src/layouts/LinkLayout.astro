---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/vnd.icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body>
    <slot />

  </body><style is:global>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    a {
      text-decoration: none;
      color: black;
    }
  </style>
</html>
